                          }
                        }
                      },
                      "additionalProperties": false
                    },
                    "additionalProperties": false
                  }
                },
                "additionalProperties": false
              }
            }
          }
        },
        "Validation": {
          "type": "object",
          "properties": {
            "Z01": {
              "description": "Statement of compliance",
              "type": "string"
            },
            "Z02": {
              "description": "Date of issue and validation",
              "type": "string",
              "format": "date-time"
            },
            "Z03": {
              "description": "Stamp of the inspection representative",
              "type": "string"
            },
            "Z04": {
